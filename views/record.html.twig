						<option value="0"></option>
						</select>
					</div>
					</div>
					
					<div class="row">
					<div class="col-xs-5 line-name">
					<p>Frame rate</p>
					</div>
					<div class="col-xs-7 line-select">
						<select name="framerate" id="framerate" data-placeholder=" ">
						<option value="0"></option>
						</select>
					</div>
					</div>
					
					<div class="row">
					<div class="col-xs-5 line-name">
					<p>Sampling</p>
					</div>
					<div class="col-xs-7 line-select">
					<p id="sampling"></p>
					</div>
					</div>
					
					<div class="row">
					<div class="col-xs-5 line-name">
					<td>Card</td>
					</div>
					<div class="col-xs-7 line-select">
						<select id=card data-placeholder=" ">
						<option value="0"></option>
						</select>
					</div>
					</div>
				</div>
				
